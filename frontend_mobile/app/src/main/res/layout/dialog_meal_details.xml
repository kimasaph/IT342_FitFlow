<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_meal_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meal Name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_meal_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meal Time"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tv_meal_macros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="350 kcal | 30g protein | 20g carbs | 10g fat"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_meal_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingredients: ..."
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_meal_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notes: ..."
        android:textColor="@android:color/black" />

<!--    <Button-->
<!--        android:id="@+id/btn_edit"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Edit" />-->

    <Button
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:layout_gravity="end"
        android:layout_marginTop="12dp" />
</LinearLayout>
